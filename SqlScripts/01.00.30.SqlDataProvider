

IF COL_LENGTH('GIBS_DonationTracker','Source') IS NULL
 BEGIN
  /*COLUMN DOES NOT EXIST OR CALLER DOES NOT HAVE PERMISSION TO VIEW THE OBJECT*/
  ALTER TABLE [dbo].[GIBS_DonationTracker] 
ADD [Source] nvarchar(50) NULL

 END

 GO

 -- TypeOfDonation

