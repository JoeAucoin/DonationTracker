IF COL_LENGTH('GIBS_DonationTrackerPledge','DonationFrom') IS NULL
 BEGIN
  /*COLUMN DOES NOT EXIST OR CALLER DOES NOT HAVE PERMISSION TO VIEW THE OBJECT*/
  ALTER TABLE [dbo].[GIBS_DonationTrackerPledge] 
ADD [DonationFrom] nvarchar(200) NULL

 END

 GO

 -- TypeOfDonation

 IF COL_LENGTH('GIBS_DonationTrackerPledge','TypeOfDonation') IS NULL
 BEGIN
  /*COLUMN DOES NOT EXIST OR CALLER DOES NOT HAVE PERMISSION TO VIEW THE OBJECT*/
  ALTER TABLE [dbo].[GIBS_DonationTrackerPledge] 
ADD [TypeOfDonation] nvarchar(50) NULL

 END

 GO



IF COL_LENGTH('GIBS_DonationTracker','DonationFrom') IS NULL
 BEGIN
  /*COLUMN DOES NOT EXIST OR CALLER DOES NOT HAVE PERMISSION TO VIEW THE OBJECT*/
  ALTER TABLE [dbo].[GIBS_DonationTracker] 
ADD [DonationFrom] nvarchar(200) NULL

 END

 GO

 -- TypeOfDonation

 IF COL_LENGTH('GIBS_DonationTracker','TypeOfDonation') IS NULL
 BEGIN
  /*COLUMN DOES NOT EXIST OR CALLER DOES NOT HAVE PERMISSION TO VIEW THE OBJECT*/
  ALTER TABLE [dbo].[GIBS_DonationTracker] 
