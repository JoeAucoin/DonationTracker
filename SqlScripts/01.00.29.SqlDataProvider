     FETCH NEXT FROM abortion INTO @PledgeID
        END

    CLOSE abortion
    DEALLOCATE abortion


	SELECT RecordID,  [@ResultTable].UserID, [@ResultTable].DriveID, DonationDate, DonationAmount, PledgeAmount, PledgeID, PledgeDate, 
	
